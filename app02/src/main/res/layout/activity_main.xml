<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/img1">

    <LinearLayout
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="23423" />

        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"></GridView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/test9path01"
            android:text="我爱你" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:background="@mipmap/test9path01"
            android:text="我爱你一万年不会变！你觉得可能吗？我爱你一万年不会变！你觉得可能吗？" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/test9path01"
            android:text="Loving you for 10 years? Do you believe that is true?" />

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你好啊！"

            android:textColor="@drawable/state_focused" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pressed_red"
            android:text="提交"
            android:textColor="@drawable/state_enabled" />

        <pro.ooss.mylibrary.views.RoundButton
            style="@style/RoundButton"
            android:layout_marginTop="16dp"
            android:enabled="true"
            android:text="RoundBtn"
            app:btnCornerRadius="30dp"
            app:btnSolidColor="@color/colorPrimary" />

    </LinearLayout>
</ScrollView>




